page{
    background-color: #eaeaea;
}
.my_header{
    background-color: white;
    padding: 30rpx 0;
}
.my_item{
    width: 100%;
    background-color: white;
    margin: 36rpx 0 0 0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    background-color:darkgrey;
}
.userinfo-nickname {
    display: inline-block;
    margin: 30rpx 0 17rpx 0;
    font-weight: bold;
}
.hr{
    width: 94%;
    margin: 0 auto;
    border-top: 1rpx solid #ffcfb7;
}
.my_item view:nth-child(1),.my_item view:nth-child(3){
    line-height: 100rpx;
    background-size: 24rpx 42rpx;
    margin: 0 0 0 40rpx
}
.my_item view:nth-child(1) image,.my_item view:nth-child(3) image{
    float: right;
    display: inline-block;
    width: 24rpx;
    height: 42rpx;
    margin: 29rpx 57rpx 0 0;
}


.ripple {
    background-color: rgba(255, 255, 255, 1);
    border-radius: 100%;
    height:10px;
    width:10px;
}
